{
  "name": "clippy",
  "packageManager": "yarn@3.2.0",
  "type": "module",
  "main": "./build/index.js",
  "scripts": {
    "test": "yarn run check && yarn run lint && yarn run ava",
    "check": "yarn run compile --noEmit",
    "lint": "xo",
    "compile": "tsc",
    "clean": "rimraf build",
    "prebuild": "yarn run clean",
    "build": "yarn run compile",
    "dev": "yarn run build --watch",
    "debug": "nodemon --inspect"
  },
  "devDependencies": {
    "@types/node": "^17.0.27",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3",
    "xo": "^0.48.0"
  }
}
